# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/zenora?schema=public"

# Upstash Redis (Required for caching, sessions, rate limiting)
# Create a database at https://console.upstash.com
# Get these values from the REST API section
UPSTASH_REDIS_REST_URL="https://your-database.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# Passwordless Authentication
SESSION_DURATION=28800              # 8 hours in seconds
CODE_EXPIRY=600                     # 10 minutes in seconds
MAX_LOGIN_ATTEMPTS=5                # Maximum verification attempts per code
RATE_LIMIT_WINDOW=3600              # 1 hour in seconds
RATE_LIMIT_MAX=3                    # Maximum code requests per hour per email

# CSRF Protection
CSRF_SECRET=your-csrf-secret-here-change-in-production

# Email Domain Whitelist (comma-separated)
# Leave empty to allow all domains (not recommended for production)
ALLOWED_EMAIL_DOMAINS=company.com,example.com

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_BASE_URL=http://localhost:3001 # NestJS backend (Phase 2)

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Email Configuration - Legacy SMTP (Hostinger)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=info@addtechno.com
SMTP_PASSWORD=your-smtp-password-here
SMTP_FROM="info@addtechno.com"
EMAIL_FROM_NAME="Zenora"

# Resend Email Service (Recommended - Modern transactional emails)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL="Zenora <noreply@zenora.ai>"

# Test Email Override (Development only)
# When set, ALL emails are redirected to this address for testing
# TEST_EMAIL_OVERRIDE=developer@zenora.ai

# AWS (Production)
AWS_REGION=eu-north-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY

# S3 for file uploads (employee docs, invoices, payroll, etc.)
S3_BUCKET_NAME=your-bucket-name
S3_REGION=eu-north-1
NEXT_PUBLIC_S3_URL=https://your-bucket-name.s3.eu-north-1.amazonaws.com

# Observability
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

